@model MVC.Models.UsuarioModel

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Excluir Usuário</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Excluir Usuário</h1>
        <dl class="row">
            <dt class="col-sm-2 font-weight-bold">Id:</dt>
            <dd class="col-sm-10">@Model.Id</dd>

            <dt class="col-sm-2 font-weight-bold">Nome:</dt>
            <dd class="col-sm-10">@Model.Nome</dd>

            <dt class="col-sm-2 font-weight-bold">Email:</dt>
            <dd class="col-sm-10">@Model.Email</dd>

            <dt class="col-sm-2 font-weight-bold">Senha:</dt>
            <dd class="col-sm-10">@Model.Senha</dd>

            <dt class="col-sm-2 font-weight-bold">CNPJ:</dt>
            <dd class="col-sm-10">@Model.Cnpj</dd>

            <dt class="col-sm-2 font-weight-bold">Imagem:</dt>
            <dd class="col-sm-10">@Model.UrlImagem</dd>

            <dt class="col-sm-2 font-weight-bold">É Fornecedor?</dt>
            <dd class="col-sm-10">@Model.IsFornecedor</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <p class="alert alert-warning">Tem certeza de que deseja excluir este usuário?</p>
            <button type="submit" class="btn btn-danger">Excluir</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</body>
</html>