@model MVC.Models.UsuarioModel

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Novo Usuário</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Adicione os dados do novo usuário</h1>
        <!-- Formulário para criar um novo usuário -->
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Nome" class="font-weight-bold">Nome:</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span> <!-- Exibe mensagens de erro de validação -->
            </div>

            <div class="form-group">
                <label asp-for="Email" class="font-weight-bold">Email:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span> 
            </div>

            <div class="form-group">
                <label asp-for="Senha" class="font-weight-bold">Senha:</label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cnpj" class="font-weight-bold">CNPJ:</label>
                <input asp-for="Cnpj" class="form-control" />
                <span asp-validation-for="Cnpj" class="text-danger"></span> 
            </div>

            <div class="form-group">
                <label asp-for="UrlImagem" class="font-weight-bold">URL da Imagem:</label>
                <input asp-for="UrlImagem" class="form-control" />
                <span asp-validation-for="UrlImagem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IsFornecedor" class="font-weight-bold">É Fornecedor?</label>
                <select asp-for="IsFornecedor" class="form-control">
                    <option value="True" selected>Sim</option>
                    <option value="False">Não</option>
                </select>
                <span asp-validation-for="IsFornecedor" class="text-danger"></span> 
            </div>

            <button type="submit" class="btn btn-dark">Salvar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</body>
</html>